{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        
        // Transpile to JS
        "module": "NodeNext",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}